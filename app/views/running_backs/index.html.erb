<p id="notice"><%= notice %></p>

<h1>Listing Running Backs</h1>

<table>
  <thead>
    <tr>
      <th>Player name</th>
      <th>Touchdowns</th>
      <th>Yards</th>
      <th>Receptions</th>
      <th>Week</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @running_backs.each do |running_back| %>
      <tr>
        <td><%= running_back.player_name %></td>
        <td><%= running_back.touchdowns %></td>
        <td><%= running_back.yards %></td>
        <td><%= running_back.receptions %></td>
        <td><%= running_back.week %></td>
        <td><%= link_to 'Show', running_back %></td>
        <td><%= link_to 'Edit', edit_running_back_path(running_back) %></td>
        <td><%= link_to 'Destroy', running_back, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

